<Window x:Class="lab14_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab14_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="1.4:" 
                   FontSize="16" 
                   Margin="0,0,0,10"/>

            <TextBlock Text="Введіть початок IP-адреси (наприклад, 192.168.1.):"/>
            <TextBox x:Name="txtBaseAddress" 
                 Text="192.168.1." 
                 Height="25" 
                 Margin="0,5,0,15"/>

            <Button x:Name="btnPingStart"
                Content="Сканувати Підмережу (1..254) Паралельно"
                Height="40"
                Margin="0,0,0,15"
                Click="btnPingStart_Click" Width="312"/>

            <TextBlock Text="Активні Хости:" Margin="0,0,0,5"/>

            <ListBox x:Name="lbActiveHosts"
                 Height="300"/>
        </StackPanel>
    </Grid>
</Window>
